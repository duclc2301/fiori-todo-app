{
  "compilerOptions": {
    "target": "ES5",
    "module": "es2022",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "rootDir": "./webapp",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "fioritodoapp/*": ["./webapp/*"],
      "unit/*": ["./webapp/test/unit/*"],
      "integration/*": ["./webapp/test/integration/*"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/@sapui5/types"]
  },
  "include": ["./webapp/**/*"]
}
